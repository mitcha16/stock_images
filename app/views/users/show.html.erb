<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center v-center">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
  </div>
</div>


<% if @images %>
<% @images.each_slice(3) do |images| %>
<div class="row">
  <% images.each do |image| %>
  <div class="col-md-4">
    <%= link_to image_tag("#{image.url}",  class: "rounded float-left", width: "304", height: "236"), image.url %>
    <%= button_to("Delete", {:controller => "users", :action => "remove", :url => image.url, :user_id => @current_user.id}, class: "btn btn-danger col-md-offset-4") if current_user? %>
  </div>
  <% end %>
</div>
<% end %>
<% end %>
</div>
